<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:fadingEdge="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/caja"
        android:layout_width="313dp"
        android:layout_height="118dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="51dp"
        android:gravity="bottom|right"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFC107"
        android:textSize="27sp"
        app:drawableTint="#FFC107" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-7dp"
        android:layout_marginBottom="5dp"
        android:background="#000B3053"
        android:columnCount="4"
        android:rowCount="6">

        <Button
            android:id="@+id/clean"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="btnClean"
            android:text="C"
            android:textColor="#ff9800"
            android:textSize="22sp" />

        <Button
            android:id="@+id/raiz"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="operacion"
            android:text="âˆš"
            android:textColor="#ff9800"
            android:textSize="22sp" />

        <Button
            android:id="@+id/potencia"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="operacion"
            android:text="x^"
            android:textColor="#ff9800"
            android:textSize="22sp" />

        <Button
            android:id="@+id/borrar"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="btnBrr"
            android:text="Borrar"
            android:textAllCaps="false"
            android:textColor="#ff9800"
            android:textSize="22sp" />

        <Button
            android:id="@+id/dividir"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="operacion"
            android:text="/"
            android:textColor="#ff9800"
            android:textSize="22sp" />

        <Button
            android:id="@+id/multiplicar"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="operacion"
            android:text="*"
            android:textColor="#ff9800"
            android:textSize="22sp" />

        <Button
            android:id="@+id/suma"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="operacion"
            android:text="+"
            android:textColor="#ff9800"
            android:textSize="22sp" />

        <Button
            android:id="@+id/resta"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="operacion"
            android:text="-"
            android:textColor="#ff9800"
            android:textSize="22sp" />


        <Button
            android:id="@+id/siete"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="numerador"
            android:text="7"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

        <Button
            android:id="@+id/ocho"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="numerador"
            android:text="8"
            android:textColor="#F7F5F5"
            android:textSize="22sp" />

        <Button
            android:id="@+id/nueve"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="numerador"
            android:text="9"
            android:textColor="#FDFDFD"
            android:textSize="22sp" />


        <Button
            android:id="@+id/cuatro"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="3dp"
            android:background="#212121"
            android:onClick="numerador"
            android:text="4"
            android:textColor="#F6F9FA"
            android:textSize="22sp" />

        <Button
            android:id="@+id/cinco"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="numerador"
            android:text="5"
            android:textAllCaps="false"
            android:textColor="#FDFDFD"
            android:textSize="22sp" />

        <Button
            android:id="@+id/seis"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="numerador"
            android:text="6"
            android:textColor="#F7F9FA"
            android:textSize="22sp"
            app:layout_column="2"
            app:layout_row="2" />


        <Button
            android:id="@+id/uno"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="numerador"
            android:text="1"
            android:textColor="#EDF2F3"
            android:textSize="22sp" />

        <Button
            android:id="@+id/dos"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="numerador"
            android:text="2"
            android:textAllCaps="false"
            android:textColor="#E8EDF0"
            android:textSize="22sp" />

        <Button
            android:id="@+id/tres"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="numerador"
            android:text="3"
            android:textColor="#ECF0F1"
            android:textSize="22sp"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:id="@+id/cero"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="numerador"
            android:text="0"
            android:textColor="#EEF3F3"
            android:textSize="22sp" />

        <Button
            android:id="@+id/punto"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="numerador"
            android:text="."
            android:textColor="#ff9800"
            android:textSize="22sp" />

        <Button
            android:id="@+id/igual"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="btnIgual"
            android:text="="
            android:textColor="#ff9800"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnMc"
            android:layout_width="182dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="btnMc"
            android:text="MC"
            android:textColor="#ff9800"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnMs"
            android:layout_width="180dp"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_margin="2dp"
            android:background="#212121"
            android:onClick="btnMs"
            android:text="MS"
            android:textColor="#ff9800"
            android:textSize="22sp" />

    </GridLayout>

    <Button
        android:id="@+id/btnhistorial"
        android:layout_width="128dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="46dp"
        android:background="#212121"
        android:gravity="bottom|end"
        android:text="historial"
        android:textColor="#ff9800"
        android:textSize="22sp" />


</RelativeLayout>